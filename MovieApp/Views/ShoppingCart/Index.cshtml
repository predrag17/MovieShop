@model MovieApp.Models.DTO.ShoppingCartDTO

<div class="container">
    <div class="row m-5">
        <a asp-action="OrderNow" class="btn btn-success">
            Order
        </a>
    </div>
</div>

<div class="container">
    <div class="m-5">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Movie Name</th>
                    <th scope="col">Ticket Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total Price for Product</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.TicketInShoppingCarts.Count; i++)
                {
                    var item = Model.TicketInShoppingCarts[i];

                    <tr>
                        <td scope="row">@(i + 1)</td>
                        <td>
                            @item.Ticket.Movie.MovieName
                        </td>
                        <td>
                            @item.Ticket.Price
                        </td>
                        <td>@item.Quantity</td>
                        <td>@(item.Ticket.Price * item.Quantity)</td>
                        <td>
                            <a asp-action="DeleteTicketFromShoppingCart" asp-route-ticketId="@item.TicketId" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
            <th scope="col">Total Price:</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col">@Model.TotalPrice</th>
            </tfoot>
        </table>
    </div>
</div>